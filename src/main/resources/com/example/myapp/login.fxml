<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-font-family: 'Segoe UI';" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.myapp.login">

    <children>
        <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">


            <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Attendance Tracker" />


            <Label style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Login to Continue" />


            <VBox fx:id="back1"  spacing="10" style="-fx-padding: 25;                          -fx-background-radius: 15;                          -fx-background-color: rgba(255,255,255,0.8);                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0.2, 0, 4);                          -fx-min-width: 320px;">

                <TextField fx:id="emailField" promptText="Email" style="-fx-background-radius: 10; -fx-padding: 10;" />

                <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-radius: 10; -fx-padding: 10;" />


                <Button onAction="#handleLogin" style="-fx-background-color: #4C84FF;                                -fx-text-fill: white;                                -fx-padding: 10;                                -fx-background-radius: 10;                                -fx-font-weight: bold;" text="Login" />
            <Button fx:id="back"  onAction="#back" text="Back" textFill="#ae7979" />


                <Hyperlink onAction="#goToSignup" text="Create an account" />

            </VBox>
        </VBox>
    </children>
</AnchorPane>
