<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-font-family: 'Segoe UI'; -fx-background-color: #f5f7fb;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.myapp.DashboardController">

    <left>
        <VBox spacing="20" style="-fx-background-color: #1e3a8a;">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="Teacher Panel" />

            <Button
                    fx:id="dashboardBtn"
                    text="Dashboard"
                    style="-fx-background-color: transparent; -fx-text-fill: white;" />

            <Button
                    fx:id="takeAttendanceBtn"
                    text="Take Attendance"
                    onAction="#openAttendance"
                    style="-fx-background-color: transparent; -fx-text-fill: white;" />

            <Button
                    fx:id="reportsBtn"
                    text="Reports"
                    onAction="#openReports"
                    style="-fx-background-color: transparent; -fx-text-fill: white;" />

            <Button
                    fx:id="logoutBtn"
                    text="Logout"
                    onAction="#logout"
                    style="-fx-background-color: transparent; -fx-text-fill: white;" />

        </VBox>
    </left>

    <center>
        <VBox spacing="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Dashboard" />

            <!-- Buttons Row -->
            <HBox spacing="10">
                <Button fx:id="addStudentBtn" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 8 20;" text="Add Student" />
                <Button fx:id="deleteStudentBtn" style="-fx-background-color: #dc2626; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 8 20;" text="Delete Student" />
                <Button fx:id="addClassBtn" style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 8 20;" text="Add Class" onAction="#createClass"/>
            </HBox>

            <!-- Date Picker Row -->
            <HBox spacing="10">
                <Label text="Select Date:" />
                <DatePicker fx:id="datePicker" />
                <Button text="Load Attendance" onAction="#loadAttendanceByDate"/>
            </HBox>

            <!-- Table -->
            <TableView fx:id="studentTable" prefHeight="400" style="-fx-background-radius: 10; -fx-border-radius: 10;">
                <columns>
                    <TableColumn fx:id="rollCol" prefWidth="100" text="Roll No" />
                    <TableColumn fx:id="nameCol" prefWidth="150" text="Name" />
                    <TableColumn fx:id="classCol" prefWidth="120" text="Class" />
                    <TableColumn fx:id="presentCol" prefWidth="80" text="Present" />
                </columns>
            </TableView>

        </VBox>
    </center>

</BorderPane>
