<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.myapp.HelloController">

   <ImageView fitHeight="417.0" fitWidth="602.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../../../img/home.jpg" />
      </image>
   </ImageView>

    <!--
    <ImageView fitHeight="400.0" fitWidth="600.0" preserveRatio="false">
        <image>

            <Image url="/img/home.jpg" />
        </image>
    </ImageView>
-->

    <VBox alignment="CENTER" prefHeight="400" prefWidth="600" spacing="25">


        <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Attendance Tracker" textFill="#cf8b8b" />


        <Label style="-fx-font-size: 16px;" text="Welcome! Please select your role:" textFill="#6cb492" />


        <HBox alignment="CENTER" spacing="30">
            <Button fx:id="studentBtn" onAction="#handleStudent" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8; -fx-padding: 10 20;" text="Student" textFill="#a15858" />
            <Button fx:id="teacherBtn" onAction="#handleTeacher" style="-fx-background-color: #ef233c; -fx-text-fill: white; -fx-font-size: 14px;                            -fx-background-radius: 8; -fx-padding: 10 20;" text="Teacher" />
        </HBox>


        <HBox fx:id="loginSignupBox" alignment="CENTER" spacing="30" visible="false">
            <Button fx:id="loginBtn" onAction="#handleLogin" style="-fx-background-color: #2b2d42; -fx-text-fill: white; -fx-font-size: 14px;                            -fx-background-radius: 8; -fx-padding: 10 20;" text="Login" />
            <Button fx:id="signupBtn" onAction="#handleSignup" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-size: 14px;                            -fx-background-radius: 8; -fx-padding: 10 20;" text="Signup" />
        </HBox>

    </VBox>
</StackPane>
