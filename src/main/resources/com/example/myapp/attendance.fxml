<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-font-family: 'Segoe UI'; -fx-background-color: #f5f7fb;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.example.myapp.attendanceController">


    <left>
        <VBox spacing="20" style="-fx-background-color: #1e3a8a;">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="Teacher Panel" />

            <Button
                    fx:id="dashboardBtn"
                    text="Dashboard"
                    onAction="#openDashboard"
                    style="-fx-background-color: transparent; -fx-text-fill: white;" />

            <Button
                    fx:id="takeAttendanceBtn"
                    text="Take Attendance"

                    style="-fx-background-color: transparent; -fx-text-fill: white;" />

            <Button
                    fx:id="reportsBtn"
                    text="Reports"
                    onAction="#openReports"
                    style="-fx-background-color: transparent; -fx-text-fill: white;" />

            <Button
                    fx:id="logoutBtn"
                    text="Logout"
                    onAction="#logout"
                    style="-fx-background-color: transparent; -fx-text-fill: white;" />
        </VBox>
    </left>


    <center>
        <VBox spacing="15" style="-fx-background-color: #f5f7fb;">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>


            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Take Attendance" />


            <HBox spacing="15">
                <Label style="-fx-font-size: 14px;" text="Class:" />
                <ComboBox fx:id="classBox" prefWidth="150" />

                <Label style="-fx-font-size: 14px;" text="Date:" />
                <DatePicker fx:id="datePicker" />
            </HBox>


            <TableView fx:id="tableView" prefHeight="400" style="-fx-background-radius: 10; -fx-border-radius: 10;">
                <columns>
                    <TableColumn fx:id="rollCol" prefWidth="100" text="Roll No" />
                    <TableColumn fx:id="nameCol" prefWidth="250" text="Name" />
                    <TableColumn fx:id="presentCol" prefWidth="100" text="Present" />
                </columns>
            </TableView>


            <Button fx:id="saveBtn" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 8 20;" text="Save Attendance" />
        </VBox>
    </center>
</BorderPane>
