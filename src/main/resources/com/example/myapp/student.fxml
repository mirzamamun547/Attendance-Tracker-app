<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.myapp.StudentController"
            prefWidth="800" prefHeight="600">


    <top>
        <HBox spacing="10" style="-fx-background-color: #2c3e50;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Student Panel"
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
        </HBox>
    </top>


    <center>
        <VBox spacing="15" style="-fx-background-color: #ecf0f1;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Student ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="studentIdField"  editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="studentNameField"  editable="false" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Course:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="studentCourseField"  editable="false" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            </GridPane>


            <TableView fx:id="attendanceTable" prefHeight="250">
                <placeholder><Label text="No attendance records"/></placeholder>
                <columns>
                    <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                    <TableColumn fx:id="remarksColumn" text="Remarks" prefWidth="200"/>
                </columns>
            </TableView>


            <VBox spacing="10">
                <Label text="Reason for Absence:"/>
                <TextArea fx:id="absenceReasonArea" prefRowCount="3" wrapText="true"/>
                <Button fx:id="submitReasonButton" text="Submit Reason"/>
            </VBox>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="refreshButton" text="Refresh"/>
            <Button fx:id="exportButton" text="Export Attendance"/>
        </HBox>
    </bottom>
</BorderPane>
